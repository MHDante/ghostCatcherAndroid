<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="100"
        android:layout_alignBottom="@+id/tool_selector">

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="9" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="100"
            android:layout_weight="85">

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="20" />

            <ViewSwitcher
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/journal_switcher"
                android:background="#ff369aff"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_weight="60">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#fffff325"
                    android:id="@+id/linearLayoutToDo"
                    android:weightSum="1">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="TO DO "
                            android:id="@+id/textViewTitleToDo"
                            android:textColor="#ff000000"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="357dp"
                        android:id="@+id/scrollView"
                        android:layout_weight="0.65">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/linearLayout1">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:id="@+id/imageBullet1"
                                    android:src="@drawable/bullet_check"
                                    android:layout_margin="15dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Talk to Prof. Wolfe"
                                    android:id="@+id/textItem1"
                                    android:textColor="#ff424242"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="30dp"
                                    android:layout_marginBottom="15dp"
                                    android:gravity="center_vertical" />

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/linearLayout2">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:id="@+id/imageView2"
                                    android:src="@drawable/bullet_check"
                                    android:layout_margin="15dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Go to Ryerson Theatre"
                                    android:id="@+id/textView2"
                                    android:textColor="#ff424242"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="30dp"
                                    android:layout_marginBottom="15dp"
                                    android:gravity="center_vertical" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/linearLayout3">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:id="@+id/right_frame"
                                    android:src="@drawable/bullet_check"
                                    android:layout_margin="15dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Capture a ghost"
                                    android:id="@+id/textView3"
                                    android:textColor="#ff424242"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="30dp"
                                    android:layout_marginBottom="15dp"
                                    android:gravity="center_vertical" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/linearLayout5">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:id="@+id/imageView5"
                                    android:src="@drawable/bullet_check"
                                    android:layout_margin="15dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Encounter the evil Spirit X"
                                    android:id="@+id/textView5"
                                    android:textColor="#ff424242"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="30dp"
                                    android:layout_marginBottom="15dp"
                                    android:gravity="center_vertical" />
                            </LinearLayout>
                        </LinearLayout>
                    </ScrollView>

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/arrow_to_do"
                        android:src="@drawable/arrow_right"
                        android:background="@android:color/transparent"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="15dp"
                        android:scaleType="fitCenter"
                        android:layout_gravity="right"
                        android:onClick="onClick"
                        android:focusableInTouchMode="false" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom|right">

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#ff7e27ff"
                    android:gravity="center_horizontal"
                    android:id="@+id/linearLayoutBio">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="BIOGRAPHY"
                            android:id="@+id/textViewTitleBio"
                            android:textColor="#ff000000"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:id="@+id/imageView7"
                        android:src="@drawable/gc_seq1"
                        android:layout_marginTop="40dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Professor Wolfe"
                        android:id="@+id/textProfName" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Professor Wolfe introduced himself when I inadvertently downloaded the Ghost Catcher app. He gave me tools to hunt Ghosts in the Ryerson U area. He built some kind of machine that bridges the land of the deceased with the world of the living.  I am somehow suspicious of his motives. "
                            android:id="@+id/textView"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="13dp"
                            android:layout_marginTop="10dp" />
                    </LinearLayout>

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/arrow_bio"
                        android:src="@drawable/arrow_right"
                        android:background="@android:color/transparent"
                        android:layout_marginBottom="15dp"
                        android:scaleType="fitCenter"
                        android:rotation="180"
                        android:layout_gravity="left"
                        android:layout_marginLeft="15dp"
                        android:onClick="onClick" />

                </LinearLayout>

            </ViewSwitcher>
        </TableRow>

    </TableLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tool_selector"
        android:src="@drawable/journal"
        android:adjustViewBounds="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp" />

</RelativeLayout>