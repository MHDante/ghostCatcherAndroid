<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="100"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_alignBottom="@+id/imageView"
        android:background="@drawable/rf_background">

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="11" />

        <TableRow
            android:layout_height="0px"
            android:layout_width="wrap_content"
            android:layout_weight="51"
            android:weightSum="100">

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="14" />

            <ImageView
                android:id="@+id/compassFace"
                android:src="@drawable/rf_arrow"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_width="0px"
                android:layout_weight="73"
                android:adjustViewBounds="true" />
        </TableRow>

    </TableLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/rf_overlay"
        android:adjustViewBounds="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/latitude"
            android:text="GPS Latitude"
            android:layout_weight="1"
            android:background="#b0b0b0"
            android:layout_height="match_parent"
            android:layout_width="0px" />

        <TextView
            android:id="@+id/longitude"
            android:text="GPS Longitude"
            android:layout_weight="1"
            android:background="#b0b0b0"
            android:layout_height="match_parent"
            android:layout_width="0px" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/compassText"
            android:text="Compass Azimut"
            android:layout_weight="1"
            android:background="#b0b0b0"
            android:layout_height="match_parent"
            android:layout_width="0px" />

        <TextView
            android:id="@+id/destinationAngle"
            android:text="Desination Angle"
            android:layout_weight="1"
            android:background="#b0b0b0"
            android:layout_height="match_parent"
            android:layout_width="0px" />
    </LinearLayout>

</RelativeLayout>