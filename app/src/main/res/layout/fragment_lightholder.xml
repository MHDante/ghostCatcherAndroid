<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
            android:id="@+id/tool_holder"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="768"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/tool_selector_overlay">

        <Space
            android:layout_width="0dp"
            android:layout_weight="144"
            android:layout_height="wrap_content" />

        <ca.mixitmedia.ghostcatcher.views.LightButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tool_light_locationMap"
            android:layout_weight="120"
            android:onClick="onClick" />

        <ca.mixitmedia.ghostcatcher.views.LightButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tool_light_rfDetector"
            android:layout_weight="120"
            android:onClick="onClick" />

        <ca.mixitmedia.ghostcatcher.views.LightButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tool_light_imager"
            android:layout_weight="120"
            android:onClick="onClick" />

        <ca.mixitmedia.ghostcatcher.views.LightButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tool_light_amplifier"
            android:layout_weight="120"
            android:onClick="onClick" />

        <Space
            android:layout_weight="144"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tool_selector_overlay"
        android:layout_gravity="left|top"
        android:src="@drawable/toolselector"
        android:scaleType="fitStart"
        android:visibility="visible"
        android:adjustViewBounds="true"
        android:layout_marginTop="-10dp" />

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="-20dp">

        <ca.mixitmedia.ghostcatcher.views.LightButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/tool_light_communicator"
            android:layout_gravity="center"
            android:onClick="onClick" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/back_gear"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:id="@+id/left_gear" />
    </FrameLayout>

    <FrameLayout
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginTop="-20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="-20dp">

    <ca.mixitmedia.ghostcatcher.views.LightButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/tool_light_journal"
        android:layout_gravity="center"
        android:onClick="onClick" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/back_gear"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:id="@+id/right_gear" />
</FrameLayout>


</RelativeLayout>