<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ca.mixitmedia.ghostcatcher.app.StartScreen"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:src="@drawable/logo"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

    <Button
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_activity_b1"
        android:id="@+id/button1"
        android:layout_gravity="center_horizontal" />

    <Button
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_activity_b2"
        android:id="@+id/button2"
        android:onClick="start"
        android:layout_gravity="center_horizontal" />

    <Button
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_activity_b3"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal" />

    <Button
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_activity_b4"
        android:id="@+id/button4"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/">

        <ImageView
            android:src="@drawable/ru_logo"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:id="@+id/imageView2"
            android:adjustViewBounds="false" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_gravity="right" />
    </LinearLayout>


</LinearLayout>
