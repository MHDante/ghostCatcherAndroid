
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context="ca.mixitmedia.ruhaunted.app.StartScreen"
    android:orientation="vertical"
    android:weightSum="2">

    <ImageView
        android:src="@drawable/logo_mixitmedia"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_margin="10dp" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_activity_b1"
        android:id="@+id/continueButton"
        android:layout_gravity="center_horizontal" />

    <Button
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_activity_b2"
        android:id="@+id/startButton"
        android:layout_gravity="center_horizontal" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">

        <ImageView
            android:src="@drawable/logo_ryerson"
            android:id="@+id/ImageView2"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:adjustViewBounds="false" />

        <ImageView
            android:src="@drawable/logo_tmz"
            android:id="@+id/transmedia"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:adjustViewBounds="false" />
    </LinearLayout>



</LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        android:id="@+id/loadScreen">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/ad3"
            android:src="@drawable/ad_space"
            android:scaleType="fitXY"
            android:focusableInTouchMode="false" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/ad2"
            android:src="@drawable/ad_space"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/ad1"
            android:src="@drawable/ad_space"
            android:scaleType="fitXY" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:background="#d5233547"
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:id="@+id/loadtext" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/loadbar" />
        </LinearLayout>
    </FrameLayout>
</FrameLayout>