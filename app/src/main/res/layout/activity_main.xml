<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_bg">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gearsbg"
        android:alpha=".3"
        android:background="@drawable/gear_bg"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp" />

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container"
        android:layout_alignParentLeft="true"
        android:visibility="visible"
        android:layout_above="@+id/imageView4"
        android:layout_below="@+id/surfaceView">

    </FrameLayout>

    <SurfaceView
        android:layout_width="0px"
        android:layout_height="40dp"
        android:id="@+id/surfaceView"
        android:layout_gravity="right|top" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_gravity="left|center_vertical"
        android:src="@drawable/frame_left"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_gravity="center_vertical|right"
        android:src="@drawable/frame_right"
        android:scaleType="fitEnd"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@drawable/ad_holder"
        android:scaleType="fitEnd"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_marginTop="-40dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:visibility="visible"
        android:id="@+id/tool_holder">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignBottom="@+id/imageView"
            android:visibility="visible"
            android:gravity="top"
            android:weightSum="28">

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:weightSum="768"
                android:layout_weight="11">

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="144"
                    android:layout_height="wrap_content" />

                <ca.mixitmedia.ghostcatcher.views.ToolLightButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tool_light_1"
                    android:layout_weight="120" />

                <ca.mixitmedia.ghostcatcher.views.ToolLightButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tool_light_2"
                    android:layout_weight="120" />

                <ca.mixitmedia.ghostcatcher.views.ToolLightButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tool_light_3"
                    android:layout_weight="120" />

                <ca.mixitmedia.ghostcatcher.views.ToolLightButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tool_light_4"
                    android:layout_weight="120" />

                <Space
                    android:layout_weight="144"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:weightSum="768"
                android:layout_weight="11">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/space2"
                    android:layout_weight="204" />

                <ca.mixitmedia.ghostcatcher.views.ToolLightButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tool_light_5"
                    android:layout_weight="120" />

                <ca.mixitmedia.ghostcatcher.views.ToolLightButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="120"
                    android:id="@+id/tool_light_6" />

                <ca.mixitmedia.ghostcatcher.views.ToolLightButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="120"
                    android:id="@+id/tool_light_7" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/space3"
                    android:layout_weight="204" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:weightSum="100">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/space4"
                    android:layout_weight="35" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/tool_holder_tab"
                    android:layout_weight="30"
                    android:background="@android:color/transparent"
                    android:onClick="onClick" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="35" />
            </TableRow>

        </TableLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/toolselector"
            android:scaleType="fitStart"
            android:visibility="visible"
            android:adjustViewBounds="true" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="left|top"
        android:translationX="0dp"
        android:id="@+id/back_gear"
        android:onClick="onClick"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="-20dp">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="100"
            android:gravity="fill_vertical|top">

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/space"
                android:layout_weight="22" />

            <TableRow
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:weightSum="100"
                android:layout_weight="56">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="22" />

                <ca.mixitmedia.ghostcatcher.views.ToolLightButton
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/tool_light_left"
                    android:layout_weight="56" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="22" />
            </TableRow>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="22" />

        </TableLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/back_gear"
            android:scaleType="fitXY"
            android:layout_gravity="center" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="left|top"
        android:translationX="0dp"
        android:id="@+id/journal_gear"
        android:onClick="onClick"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="-20dp"
        android:layout_marginTop="-20dp">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="100"
            android:gravity="fill_vertical|top">

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="22" />

            <TableRow
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:weightSum="100"
                android:layout_weight="56">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="22" />

                <ca.mixitmedia.ghostcatcher.views.ToolLightButton
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/tool_light_right"
                    android:layout_weight="56" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="22" />
            </TableRow>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="22" />

        </TableLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/back_gear"
            android:scaleType="fitXY"
            android:layout_gravity="center" />
    </FrameLayout>

</RelativeLayout>