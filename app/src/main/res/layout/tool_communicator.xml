<RelativeLayout
    android:layout_width="390dp"
    android:layout_height="640dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:foregroundGravity="center">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="110"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_alignBottom="@+id/main_frame">


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="100"
            android:layout_weight="15">

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="10" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="12"
                android:id="@+id/help"
                android:onClick="onClick"
                android:layout_gravity="right|bottom"
                android:background="@android:color/transparent" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/space"
                android:layout_weight="58" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="12"
                android:id="@+id/sound"
                android:onClick="onClick"
                android:layout_gravity="right|bottom"
                android:background="@android:color/transparent" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="8" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="100"
            android:layout_weight="68.5">

            <Space
                android:layout_width="0dp"
                android:layout_height="0px"
                android:id="@+id/space2"
                android:layout_weight="8.5" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="83"
                android:id="@+id/character_portrait"
                android:src="@drawable/staticfuzz"
                android:layout_row="0"
                android:layout_column="0"
                android:adjustViewBounds="true"
                android:focusableInTouchMode="false"
                android:scaleType="fitXY" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/space3"
                android:layout_weight="8.5" />
        </TableRow>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/space6"
            android:layout_weight="7.5" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="100"
            android:layout_weight="17.5">

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/space5"
                android:layout_weight="8.5" />

            <ScrollView
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="84"
                android:gravity="center_horizontal"

                android:id="@+id/subtitle_scroll_view"
                android:layout_gravity="center_horizontal|top"
                android:background="#ff000000"
                android:layout_marginLeft="5dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:id="@+id/subtitle_text_view"
                        android:layout_gravity="bottom"
                        android:textColor="#ff2ab73d"
                        android:padding="5dp" />
                </LinearLayout>
            </ScrollView>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/space4"
                android:layout_weight="7.5" />
        </TableRow>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/space7"
            android:layout_weight="2" />

    </TableLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_frame"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:src="@drawable/main_screen2"
        android:layout_gravity="center"
        android:adjustViewBounds="true" />

</RelativeLayout>