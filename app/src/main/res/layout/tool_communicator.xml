<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/background_light">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_weight="61"
        android:id="@+id/character_portrait"
        android:src="@drawable/shine"
        android:layout_row="0"
        android:layout_column="0"
        android:adjustViewBounds="true"
        android:focusableInTouchMode="false"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="..."
        android:id="@+id/subtitle_text_view"
        android:layout_gravity="bottom"
        android:textColor="#ff2ab73d"
        android:padding="5dp"
        android:layout_weight="76"
        android:background="#000000"
        android:layout_below="@+id/character_portrait"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignLeft="@+id/character_portrait"
        android:layout_alignStart="@+id/character_portrait"
        android:layout_alignRight="@+id/character_portrait"
        android:layout_alignEnd="@+id/character_portrait" />

</RelativeLayout>